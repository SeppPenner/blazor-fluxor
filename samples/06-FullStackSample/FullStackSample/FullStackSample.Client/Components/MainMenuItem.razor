<li class="nav-item px-3">
	<NavLink class="nav-link" href="@Url" Match="@NavLinkMatch">
		<span class="oi @Css" aria-hidden="true"></span>@LinkText
	</NavLink>
</li>

@code
{
	[Parameter] bool MatchWholeUrl { get; set; } = false;
	[Parameter] string Css { get; set; }
	[Parameter] string Url { get; set; }
	[Parameter] string LinkText { get; set; }

	private NavLinkMatch NavLinkMatch => MatchWholeUrl ? NavLinkMatch.All : NavLinkMatch.Prefix;
}
